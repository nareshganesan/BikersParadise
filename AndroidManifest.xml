<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bikers.paradise"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <application
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        <uses-library android:name="com.google.android.maps" />
        
        <activity
            android:name=".BikersParadiseActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ClubDetail"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.bikers.paradise.CLUBDETAIL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".DisplayClubDetail"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.bikers.paradise.DISPLAYCLUBDETAIL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
         <activity
            android:name=".Location"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.bikers.paradise.LOCATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
            android:name=".DisplayLocationSearch"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.bikers.paradise.DISPLAYLOCATIONSEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
            android:name=".GoogleLocations"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.bikers.paradise.GOOGLELOCATIONS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
            android:name=".TripDetail"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.bikers.paradise.TRIPDETAILS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayTripDetails"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.bikers.paradise.DISPLAYTRIPDETAILS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        
    </application>

</manifest>